
@{
    ViewData["Title"] = "Index";
}
<div class="container1" align="center">
<h1>Please fill out the form to register!</h1>

<form action="/Registration/Registration" method="post" class="form">
    First Name: <input type="text" name="fname" maxlength="20" /><br />

    Last Name: <input type="text" name="lname" maxlength="20" /><br />

    Email: <input type="email" name="email" /><br />

    Phone Number: <input type="number" name="pnumber" maxlength="10" /> <br />

    Password: <input type="password" name="password" maxlength="20" /><br />
    <br />
    <input type="submit" value="Regiser" />
</form>
</div>